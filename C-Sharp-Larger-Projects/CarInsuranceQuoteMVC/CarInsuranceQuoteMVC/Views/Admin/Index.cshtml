@using CarInsuranceQuoteMVC.ViewModels
@model List<QuoteVm>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-8 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">
                Quotes that have been Quoth
            </h5>
        </div>
        <div class="card-body">
            @foreach (var quote in Model)
            {
                <div class="row mb-1 text-left">
                    <div class="col-2">
                        @quote.FirstName
                    </div>
                    <div class="col-3">
                        @quote.LastName
                    </div>
                    <div class="col-5">
                        @quote.EmailAddress
                    </div>
                    <div class="col-2">
                        @{ 
                            decimal value = (decimal)quote.QuoteValue;
                            string valueString = value.ToString("C");
                         }
                        @valueString
                    </div>
                </div>
            }
        </div>
     </div>
</div>



